<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#ffc3d0d6"
                    android:centerColor="#ffa4bbc1"
                    android:centerY="0.75"
                    android:endColor="#ffc3d0d6"
                    android:angle="270"
            />
        </shape>
    </item>
    
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="#80c3d0d6"
                        android:centerColor="#80a4bbc1"
                        android:centerY="0.75"
                        android:endColor="#a0c3d0d6"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
    
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="#ff0ce7f8"
                        android:centerColor="#ff03afdd"
                        android:centerY="0.75"
                        android:endColor="#ff0179b6"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
    
</layer-list>

