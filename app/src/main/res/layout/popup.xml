<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/scroll"
        android:layout_alignRight="@id/scroll"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/popupwindow_top_frame" />

    <ImageView
        android:id="@id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/popupwindow_arrow_up" />

    <HorizontalScrollView
        android:id="@id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header2"
        android:fadingEdgeLength="0.0dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@id/tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/popupwindow_slider_grip_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/popupwindow_slider_grip_right" />
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/scroll"
        android:layout_alignRight="@id/scroll"
        android:layout_below="@id/scroll"
        android:background="@drawable/popupwindow_bottom_frame" />

    <ImageView
        android:id="@id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/footer"
        android:layout_marginTop="-1.0dip"
        android:src="@drawable/popupwindow_arrow_down" />

</RelativeLayout>