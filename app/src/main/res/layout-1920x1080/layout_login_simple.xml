<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk_login"
    android:orientation="vertical">

    <include
        android:id="@id/title"
        layout="@layout/activity_header"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.2" />

        <TextView
            style="@style/txt_login_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6.0"
            android:text="系统登录" />

        <View
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="3.0"
        android:orientation="horizontal">

        <View
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="2.0" />

        <include
            layout="@layout/layout_login_style_1"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="6.0" />

        <View
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="2.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="2.0"
        android:gravity="bottom|right|center"
        android:orientation="horizontal"
        android:padding="4.0dip"
        android:visibility="visible">

        <ImageButton
            android:id="@id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|center"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:background="@drawable/icon_go"
            android:visibility="gone" />

        <View
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_weight="5.0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="8.0dip"
            android:visibility="visible">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="2.0" />

            <Button
                android:id="@id/btn_login"
                style="@style/txt_login_button"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="3.0"
                android:text="登    录"
                android:textAppearance="?android:textAppearanceMedium" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="2.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_weight="5.0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="8.0dip"
            android:visibility="visible">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="2.0" />

            <Button
                android:id="@id/btn_quite"
                style="@style/txt_login_button"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="3.0"
                android:text="取    消"
                android:textAppearance="?android:textAppearanceMedium" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="2.0" />
        </LinearLayout>

        <View
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>